@model List<Project_EF.Models.CartItem>

@if (Model.Count > 0)
{
    decimal total = 0;
    int stt = 1;

    <table class="table">
        <tr>
            <th>#</th>
            <th>Hình ảnh</th>
            <th>Sản phẩm</th>
            <th>Giá khuyễn mãi</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var cartitem in Model)
        {
            var thanhtien = cartitem.quantity * cartitem.Product.sale;
            total += ((decimal)thanhtien);

            <tr>
                <td>@(stt++)</td>
                <td><img style="width:150px" src="~/images/@cartitem.Product.image_product" alt="Hình ảnh sản phẩm" /></td>
                <td>@cartitem.Product.name_product</td>
                <td>@(cartitem.Product.sale.ToString("n0"))</td>
                <td><input style="width:40px" asp-for="@cartitem.quantity" id="@($"quantity-{cartitem.Product.Id}")" /></td>
                <span asp-validation-for="@cartitem.quantity" class="text-danger">@ViewBag.quantity</span>
                <td>@(thanhtien.ToString("n0"))</td>
                <td>
                    <button class="btn btn-success updatecartitem"
                            data-productid="@cartitem.Product.Id">
                        Cập nhật
                    </button>
                    <a asp-route="removecart" asp-route-productid="@cartitem.Product.Id"
                       class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="5" class="text-right">Tổng tiền</td>
            <td>@(total.ToString("n0"))</td>
            <td></td>
        </tr>
    </table>
    <div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Tiếp tục mua hàng</a>
        <a style="float:right;" asp-controller="Product" asp-action="Checkout" class="btn btn-success">Đặt hàng</a>
    </div>

    @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
    }

}
else
{
    <p class="alert alert-danger">Giỏ hàng trống</p>
}