@model IEnumerable<Project_EF.Models.Product>
@section slide{ 
    <div id="myCarousel" class="carousel slide border" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/silde/slider1.jpg" alt="anhnoithat">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/silde/slider2.jpg" alt="anhnoithat">
            </div>
        </div>
        <!-- Controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
<div class="product-home">
    <div class="pagewrap">
        <h3 class="h3-title"><span>Sản phẩm mới nhất</span></h3>
        @foreach (var product in Model)
        {
            <div class="product-main">
                <div class="pro-wrap">
                    <img src="~/images/@product.image_product" alt="Bàn làm việc">
                    <div class="name-pro">@product.name_product</div>
                    @if (product.price != product.sale)
                    {
                        <div class="price-pro">
                            <div class="sale">@string.Format("{0:#,##0.##}", product.sale)đ</div>
                            <div class="price">@string.Format("{0:#,##0.##}", product.price)đ</div>
                        </div>
                    }
                    else
                    {
                        <div class="price-pro">
                            <div class="sale">@string.Format("{0:#,##0.##}", product.sale)đ</div>
                        </div>
                    }
                    @if (product.status == "Có sẵn")
                    {
                        <div class="btn-pro">
                            <a asp-route="addcart"
                               asp-route-productid="@product.Id" class="btn-cart">Giỏ hàng</a>
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn-detail">Chi tiết</a>
                        </div>
                    }
                    else @if (product.status == "Hàng order")
               {
                <div class="btn-pro">
                    <button style="margin-right:15px" class="btn btn-danger" data-toggle="modal" data-target="#dialog1">Liên hệ</button>
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn-detail">Chi tiết</a>
                </div>
            }
            else @if (product.status == "Hết hàng")
                   {
                    <div class="btn-pro">
                        <button class="btn" disabled>Hết hàng</button>
                    </div>
                }
                </div>
            </div>
        }
    </div>
</div>

