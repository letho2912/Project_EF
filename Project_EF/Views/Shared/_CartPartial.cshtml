@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor
@{
    var session = HttpContextAccessor.HttpContext.Session;
    string jsoncart = session.GetString(Project_EF.Controllers.ProductController.CARTKEY);
    if (jsoncart != null)
    {
        var cart = JsonConvert.DeserializeObject<List<CartItem>>(jsoncart);
        <li><a asp-route="cart">Giỏ hàng(@cart.Count)</a></li> }
    else
    {
        <li><a asp-route="cart">Giỏ hàng(0)</a></li> }

}