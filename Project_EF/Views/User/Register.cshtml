@model Project_EF.Models.User
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="signup">
    <div class="signup-connect">
        <img src="https://xaynhasaigon.vn/wp-content/uploads/2017/09/noi-that-nha-hien-dai-6.jpg" alt="">
    </div>
    <div class="signup-classic">
        <form class="form" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset class="fullname">
                <input type="text" asp-for="fullname" placeholder="Họ và tên" />
                <span asp-validation-for="fullname" class="text-danger"></span>
            </fieldset>
            <fieldset class="username">
                <input type="text" asp-for="username" placeholder="Tên đăng nhập" />
                <span asp-validation-for="username" class="text-danger"></span>
                <span class="text-danger">@ViewBag.error</span>
            </fieldset>
            <fieldset class="email">
                <input type="email" asp-for="email" placeholder="Địa chỉ email" />
                <span asp-validation-for="email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.error1</span>
            </fieldset>
            <fieldset class="phone">
                <input type="text" asp-for="phone" placeholder="Số điện thoại" />
                <span asp-validation-for="phone" class="text-danger"></span>
                <span class="text-danger">@ViewBag.error2</span>
            </fieldset>
            <fieldset class="password">
                <input type="password" asp-for="password" placeholder="Mật khẩu" />
                <span asp-validation-for="password" class="text-danger"></span>
            </fieldset>
            <select asp-for="status" class="form-control" hidden>
                <option selected>Enable</option>
            </select>
                <button type="submit" class="btn">Đăng kí</button>
        </form>
        <span>Bạn đã có tài khoản?<a asp-action="Login">Đăng nhập</a></span>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


