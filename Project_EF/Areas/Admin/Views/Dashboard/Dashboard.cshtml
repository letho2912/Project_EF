    </div>
    <div class="khung3">
        <div class="tren3">
            <span class="icon3">
                <i class="fa fa-shopping-cart"
                   aria-hidden="true"></i>
            </span>
            <div class="socmt3">
                <span class="sotren3">@ViewBag.total</span>
                <p class="cmt3">Đơn hàng mới</p>
            </div>
        </div>
        <div class="duoi3">
            <div class="chu3">
                <span class="xemCT3"><a href="#">Xem chi tiết</span><span class="iconD3">
                    <i class="fa fa-arrow-circle-right"
                       aria-hidden="true"></i></a>
                </span>
            </div>
        </div>
    </div>

</div>
<br />
<br />
<h5>Đơn hàng mới</h5>
<table class="table-primary">
    <thead>
        <tr>
            <th style="width:19px">
                Mã đơn hàng
            </th>
            <th>
                Họ tên KH
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            <th>
                Địa chỉ
            </th>
            <th style="width:35px">
                Ngày đặt
            </th>
            <th>
                Tình trạng
            </th>
            <th>
                Tài khoản
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datesub)
                </td>
                @if (item.status == "Đang xử lý")
                {
                    <td>
                        <p style="font-size:15px"> @Html.DisplayFor(modelItem => item.status)</p>
                    </td>
                }
                else if (item.status == "Hoàn thành")
                {
                    <td>
                        <p style="font-size:15px"> @Html.DisplayFor(modelItem => item.status)</p>
                    </td>
                }
                else if (item.status == "Đã hủy")
                {
                    <td>
                        <p style="font-size:15px"> @Html.DisplayFor(modelItem => item.status)</p>
                    </td>
                }
                else if (item.status == "Đang giao")
                {
                    <td><p style="font-size:15px">@Html.DisplayFor(modelItem => item.status) </p></td>
                }
                else if (item.status == "Xác nhận...")
                {
                    <td><p style="font-size:15px">@Html.DisplayFor(modelItem => item.status) </p></td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.User.username)
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Dashboard", new { orderId = item.OrderId }, new { @class = "btn btn - info" })
                    @if (item.status == "Đang xử lý")
                    {
                        <a asp-action="Edit" asp-controller="Orders" asp-route-id="@item.OrderId" class="btn btn-warning">Xác nhận</a>
                    }
                    else if (item.status == "Đang giao")
                    {
                        <a asp-action="Edit2" asp-route-id="@item.OrderId" class="btn btn-warning">Cập nhật</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
@if (Model.OrderDetail != null)
{
    decimal tt = 0;
    int stt = 1;
    <h6>Chi tiết đơn hàng @ViewBag.orderId</h6>
    <table class="table">
        <tr>
            <th>#</th>
            <th>Hình ảnh</th>
            <th>Sản phẩm</th>
            <th>Giá bán</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>

        @foreach (var item in Model.OrderDetail)
        {
            var thanhtien = item.amount * item.price;
            tt += ((decimal)thanhtien);
            string selectedRow = "";
            if (item.OrderId == ViewBag.orderId)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>@(stt++)</td>
                <td>
                    <img style="width:150px" src="~/images/@item.Product.image_product" />
                </td>
                <td>
                    @item.Product.name_product
                </td>
                <td>
                    @(item.price.ToString("n0"))
                </td>
                <td>
                    @item.amount
                </td>
                <td>@(thanhtien.ToString("n0"))</td>
            </tr>
        }
        <tr>Tổng tiền: @(tt.ToString("n0"))</tr>

    </table>
}